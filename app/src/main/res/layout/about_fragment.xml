<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/about_container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/about_card_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/about_hamster_width"
                android:layout_height="@dimen/about_hamster_height"
                android:id="@+id/hamster_about"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/about_hamster_margin_top"
                android:src="@mipmap/john_cena"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_description"
                android:gravity="center"
                android:padding="@dimen/about_description_padding"
                android:text="@string/about_description_text"
                android:textStyle="bold"
                android:textSize="@dimen/about_description_text_size"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/smile"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold"
                android:textSize="@dimen/about_smile_text_size"
                android:layout_marginBottom="@dimen/about_smile_margin_bottom"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.v4.widget.NestedScrollView>