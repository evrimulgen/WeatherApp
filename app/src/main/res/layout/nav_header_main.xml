<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_layout_height"
    android:background="@mipmap/drawer_background"
    android:orientation="vertical"
    android:paddingTop="@dimen/status_bar_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="@dimen/header_avatar_sizes"
        android:layout_height="@dimen/header_avatar_sizes"
        android:id="@+id/user_avatar"
        android:layout_margin="@dimen/header_spacing_large"
        android:elevation="@dimen/header_avatar_elevation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_credentials"
        android:layout_above="@+id/user_email"
        android:layout_marginLeft="@dimen/header_spacing_large"
        android:layout_marginStart="@dimen/header_spacing_large"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_email"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/header_spacing_large"
        android:layout_marginStart="@dimen/header_spacing_large"
        android:layout_marginBottom="@dimen/header_spacing_large"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</RelativeLayout>